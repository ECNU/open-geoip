[Unit]
Description=open-geoip
After=network-online.target
Wants=network-online.target

[Service]
# modify when deploy in prod env
User=root
Group=root

Type=simple
ExecStart=/opt/open-geoip/open-geoip
WorkingDirectory=/opt/open-geoip

Restart=always
RestartSec=1
StartLimitInterval=0

[Install]
WantedBy=multi-user.target

